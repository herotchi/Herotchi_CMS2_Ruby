<% content_for :title, "ログイン" %>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class="row g-3 card mt-3 pt-2 pb-4 px-4 shadow">

    <div class="col-12">
        <%= f.label :email, class: "form-label" do %>メールアドレス
        <span class="text-danger fw-bold">※</span>
        <% end %>
        <%= f.email_field :email, class: "form-control#{' is-invalid' if f.object.errors[:email].any?}", autofocus: true, autocomplete: "email" %>
        <% if f.object.errors[:email].any? %>
        <div class="invalid-feedback"><%= f.object.errors.full_messages_for(:email).first %></div>
        <% end %>
    </div>

    <div class="col-12">
        <%= f.label :password, class: "form-label" do %>パスワード
        <span class="text-danger fw-bold">※</span>
        <% end %>
        <%= f.password_field :password, class: "form-control#{' is-invalid' if f.object.errors[:password].any?}", autocomplete: "current-password" %>
        <% if f.object.errors[:password].any? %>
        <div class="invalid-feedback"><%= f.object.errors.full_messages_for(:password).first %></div>
        <% end %>
    </div>

    <% if devise_mapping.rememberable? %>
    <div class="col-12">
        <div class="form-check">
            <%= f.check_box :remember_me, class: "form-check-input shadow-sm#{' is-invalid' if f.object.errors[:remember_me].any?}" %>
            <%= f.label :remember_me, class: "form-check-label" %>
            <% if f.object.errors[:remember_me].any? %>
            <div class="invalid-feedback"><%= f.object.errors.full_messages_for(:remember_me).first %></div>
            <% end %>
        </div>
    </div>
    <% end %>

    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <div class="col-12">
        <%= link_to "パスワードを忘れた方はこちら", new_password_path(resource_name), class: "link-secondary" %>
    </div>
    <% end %>

    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div class="col-12">
        <%= link_to "ユーザー登録をしたい方はこちら", new_registration_path(resource_name) %>
    </div>
    <% end %>


    <div class="col-12">
        <%= f.submit "ログイン", class: "btn btn-primary w-100" %>
    </div>
</div>

<% end %>

<%#= render "users/shared/links" %>