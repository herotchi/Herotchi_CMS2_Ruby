<% content_for :title, "アカウント作成" %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%#= render "users/shared/error_messages", resource: resource %>

<div class="row g-3 card mt-3 pt-2 pb-4 px-4 shadow">

    <div class="col-12">
        <%= f.label :email, class: "form-label" do %>メールアドレス
        <span class="text-danger fw-bold">※</span>
        <% end %>
        <%= f.email_field :email, class: "form-control#{' is-invalid' if f.object.errors[:email].any?}", autofocus: true, autocomplete: "email" %>
        <% if f.object.errors[:email].any? %>
        <div class="invalid-feedback"><%= f.object.errors.full_messages_for(:email).first %></div>
        <% end %>
    </div>

    <div class="col-12">
        <%= f.label :name, class: "form-label" do %>ユーザー名
        <span class="text-danger fw-bold">※</span>
        <% end %>
        <%= f.text_field :name, class: "form-control#{' is-invalid' if f.object.errors[:name].any?}", autocomplete: "name" %>
        <% if f.object.errors[:name].any? %>
        <div class="invalid-feedback"><%= f.object.errors.full_messages_for(:name).first %></div>
        <% end %>
    </div>

    <div class="col-12">
        <%= f.label :password, class: "form-label" do %>パスワード
        <span class="text-danger fw-bold">※</span>
        <% end %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, class: "form-control#{' is-invalid' if f.object.errors[:password].any?}", autocomplete: "new-password" %>
        <% if f.object.errors[:password].any? %>
        <div class="invalid-feedback"><%= f.object.errors.full_messages_for(:password).first %></div>
        <% end %>
    </div>

    <div class="field">
        <%= f.label :password_confirmation, class: "form-label" do %>パスワード（確認用）
        <span class="text-danger fw-bold">※</span>
        <% end %>
        <%= f.password_field :password_confirmation, class: "form-control#{' is-invalid' if f.object.errors[:password_confirmation].any?}", autocomplete: "new-password" %>
        <% if f.object.errors[:password_confirmation].any? %>
        <div class="invalid-feedback"><%= f.object.errors.full_messages_for(:password_confirmation).first %></div>
        <% end %>
    </div>

    <% if devise_mapping.rememberable? %>
    <div class="col-12">
        <div class="form-check">
            <%= f.check_box :user_policy, class: "form-check-input shadow-sm text-center#{' is-invalid' if f.object.errors[:user_policy].any?}" %>
            <%= f.label :user_policy, class: "form-check-label" do %>
            <span class="text-info text-decoration-underline">利用規約</span>に同意する
            <% end %>
            <% if f.object.errors[:user_policy].any? %>
            <div class="invalid-feedback"><%= f.object.errors.full_messages_for(:user_policy).first %></div>
            <% end %>
        </div>
    </div>
    <% end %>

    <div class="col-12">
        <%= link_to "登録済みの方はこちら", new_session_path(resource_name) %>
    </div>

    <div class="col-12">
        <%= f.submit "アカウント作成", class: "btn btn-primary w-100" %>
    </div>

</div>
<% end %>