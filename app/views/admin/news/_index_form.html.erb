<%= search_form_for @q, url: admin_news_index_path, method: :get do |form| %>

<div class="card-header">お知らせ一覧</div>
<div class="card-body">
    <div class="row g-3">

        <div class="col-md-12">
            <%= render 'shared/form_label', form: form, attribute: :title, label: "タイトル" %>
            <%= form.text_field :title_cont, class: "shadow-sm form-control" %>
        </div>

        <%= render 'shared/form_label', form: form, attribute: :link_flg_in, label: "リンク設定" %>
        <%= render 'shared/checkbox_group', form: form, attribute: :link_flg_in, collection: NewsConstants::LINK_FLG_LIST %>

        <div class="col-md-6">
            <%= render 'shared/form_label', form: form, attribute: :release_date_gteq, label: "公開日～" %>
            <%= form.date_field :release_date_gteq, class: "shadow-sm form-control" %>
        </div>

        <div class="col-md-6">
            <%= render 'shared/form_label', form: form, attribute: :release_date_lteq, label: "～公開日" %>
            <%= form.date_field :release_date_lteq, class: "shadow-sm form-control" %>
        </div>

        <%= render 'shared/form_label', form: form, attribute: :release_flg_in, label: "表示設定" %>
        <%= render 'shared/checkbox_group', form: form, attribute: :release_flg_in, collection: NewsConstants::RELEASE_FLG_LIST %>

    </div>
</div>
<div class="card-footer">
    <div class="row">
        <div class="col-12 text-center my-2">
            <%= form.submit "検索", class: "btn btn-primary w-50" %>
            <%= link_to "戻る", admin_root_path, class: "btn btn-secondary", role: "button" %>
        </div>
    </div>
</div>
<% end %>